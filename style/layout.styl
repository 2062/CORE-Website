.nav-bar
	height: 40px
	width: 100%
	background: #1f1f1f
	opacity: 0.75
	//filter: alpha(opacity=75)
	position: absolute
	margin-top: -40px
	z-index: 100

div.header .nav-bar
	margin-top: -50px

div.header ul#dropmenu.nav
	top: -50px

.current_page_ancestor
	background: #C7C7C7

#dropmenu a
	&.fatherli
		background: arrow_img right no-repeat
		background-position: 95% 16px
		padding-right: 20px

		&:hover, &.hover
			background: #fb611e arrow_img right no-repeat
			background-position: 95% 18px
			padding-right: 20px

	&.childfatherli
		background: right_arrow_img right no-repeat
		background-position: 95%

		&:hover, &.hover-sub
			background: #FAC090 right_arrow_img right no-repeat
			background-position: 95%

#dropmenu.nav
	position: relative
	top: -40px
	height: 40px
	line-height: 30px
	background: none
	z-index: 2000

#dropmenu, #dropmenu ul
	margin: 0
	padding: 0
	list-style-type: none
	list-style-position: outside
	position: relative
	line-height: 1.5em
	width: 100%
	background: #fff
	font-weight: bold

#dropmenu
	a
		display: block
		padding: 4px 12px
		color: white
		border-right: none
		text-decoration: none
		background: none
		font-size: 14px

		&:hover, &.hover
			background: #fb611e
			margin-top: -2px
			padding: 6px 12px 3px 12px
			border-bottom: 3px solid #c64006


	ul
		z-index: 1000
		position: absolute
		display: none
		width: 12em
		top: 39px
		text-align: left

		a
			color: #333
			border-left: 1px solid #c8c8c8

			&:hover
				margin-top: 0

		ul
			top: auto

	li
		float: left
		position: relative
		z-index: 1000

		ul
			border-top: 1px solid #c8c8c8
			width: 200px

			a
				padding: 4px 0 4px 10px
				width: 190px
				height: auto
				font-size: 11px
				float: left
				margin-left: -1px
				border-bottom: 1px solid #c8c8c8

				&:hover
					padding: 4px 0 4px 10px
					border-bottom: 1px solid #c8c8c8
					background: #FAC090


			ul
				left: 12em
				margin: 0px

		&:hover
			ul ul, ul ul ul, ul ul ul ul
				display: none

	li:hover ul,
	li li:hover ul,
	li li li:hover ul,
	li li li li:hover ul
		display: block

